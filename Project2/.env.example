# ──────────────────────────────────────────────
# AWS Credentials & Region
# ──────────────────────────────────────────────
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1

# ──────────────────────────────────────────────
# S3 Bucket (used for photo file storage)
# ──────────────────────────────────────────────
S3_BUCKET_NAME=photo-gallery-se4220

# ──────────────────────────────────────────────
# DynamoDB table names (Part A)
# ──────────────────────────────────────────────
DYNAMO_USERS_TABLE=PhotoGalleryUsers
DYNAMO_PHOTOS_TABLE=PhotoGalleryPhotos

# ──────────────────────────────────────────────
# MongoDB connection (Part B)
# ──────────────────────────────────────────────
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=photo_gallery

# ──────────────────────────────────────────────
# Flask
# ──────────────────────────────────────────────
SECRET_KEY=change-me-to-a-random-string
FLASK_ENV=production
